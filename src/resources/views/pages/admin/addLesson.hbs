<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Add New Lesson</h6>
    </div>
    <div class="card-body">
        <form method="POST" action="/admin/lesson/add">
            <div class="form-group">
                <label for="lessonTitle">Lesson Title</label>
                <input type="text" class="form-control" id="lessonTitle" name="title" required>
            </div>
            <div class="form-group">
                <label for="lessonDescription">Description</label>
                <textarea class="form-control" id="lessonDescription" name="description" rows="4" required></textarea>
            </div>
            <div class="form-group">
                <label for="courseSelect">Select Course</label>
                <select class="form-control" id="courseSelect" name="courseId" required>
                    {{#each courses}}
                        <option value="{{this._id}}">{{this.name}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group">
                <label>Status</label><br>
                <input type="radio" id="active" name="status" value="active" checked>
                <label for="active">Active</label><br>
                <input type="radio" id="inactive" name="status" value="inactive">
                <label for="inactive">Inactive</label>
            </div>
            <button type="submit" class="btn btn-primary">Add Lesson</button>
        </form>
    </div>
</div>
