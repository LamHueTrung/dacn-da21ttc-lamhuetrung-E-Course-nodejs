<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">List all users</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Active status</th>
                        <th>Role</th>
                        <th>Full name</th>
                        <th>User name</th>
                        <th>Password</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each accounts}}
                    <tr>
                        <td style="color: {{#if this.isDeleted}} red {{else}} green {{/if}}">
                            {{#if this.isDeleted}} Vô hiệu hóa {{else}} Đang hoạt động {{/if}}
                        </td>
                        <td>{{#if (eq this.role "sub_admin")}}SUB ADMIN{{else}}USER{{/if}}</td>
                        <td>{{this.profile.fullName}}</td>
                        <td>{{this.username}}</td>
                        <td>
                            <span class="password-hidden" id="password-{{@index}}">********</span>
                            <span class="password-visible" id="password-visible-{{@index}}" style="display: none;">{{this.passwordDecrypted}}</span>
                            <button type="button" onclick="togglePassword({{@index}})" class="btn btn-sm btn-outline-primary">Xem mật khẩu</button>
                            <script>
                                function togglePassword(index) {
                                    const hiddenPassword = document.getElementById(`password-${index}`);
                                    const visiblePassword = document.getElementById(`password-visible-${index}`);
                                    
                                    if (hiddenPassword.style.display === "none") {
                                        hiddenPassword.style.display = "inline";
                                        visiblePassword.style.display = "none";
                                    } else {
                                        hiddenPassword.style.display = "none";
                                        visiblePassword.style.display = "inline";
                                    }
                                }
                            </script>
                        </td>
                        <td>
                            <a class="btn btn-sm btn-outline-success" href="/admin/user/updateUser/{{this._id}}">Edit</a>
                            
                            {{#if this.isDeleted}}
                                <a onclick="confirmRestore('{{this._id}}')" class="btn btn-sm btn-outline-warning">Restore</a>
                            {{else}}
                                <a onclick="confirmDisable('{{this._id}}')" class="btn btn-sm btn-outline-danger">Disable</a>
                            {{/if}}

                            <script>
                                function confirmDisable(idUser) {
                                    Swal.fire({
                                        title: 'Vô hiệu hóa người dùng này?',
                                        icon: 'warning',
                                        showCancelButton: true,
                                        confirmButtonText: 'Đồng ý',
                                        cancelButtonText: 'Hủy',
                                    }).then((result) => {
                                        if (result.isConfirmed) {
                                            fetch(`/admin/user/disable/${idUser}`, { method: 'POST' })
                                                .then(response => response.ok ? response.json() : Promise.reject('Lỗi khi vô hiệu hóa người dùng'))
                                                .then(data => {
                                                    Swal.fire({
                                                        title: data.success ? 'Người dùng đã được vô hiệu hóa!' : 'Không thể vô hiệu hóa người dùng!',
                                                        icon: data.success ? 'success' : 'error',
                                                        confirmButtonText: 'OK'
                                                    }).then(() => { if (data.success) location.reload(); });
                                                })
                                                .catch(error => Swal.fire({ title: 'Có lỗi xảy ra!', icon: 'error', confirmButtonText: 'OK' }));
                                        }
                                    });
                                }

                                function confirmRestore(idUser) {
                                    Swal.fire({
                                        title: 'Khôi phục người dùng này?',
                                        icon: 'info',
                                        showCancelButton: true,
                                        confirmButtonText: 'Đồng ý',
                                        cancelButtonText: 'Hủy',
                                    }).then((result) => {
                                        if (result.isConfirmed) {
                                            fetch(`/admin/user/restore/${idUser}`, { method: 'POST' })
                                                .then(response => response.ok ? response.json() : Promise.reject('Lỗi khi khôi phục người dùng'))
                                                .then(data => {
                                                    Swal.fire({
                                                        title: data.success ? 'Người dùng đã được khôi phục!' : 'Không thể khôi phục người dùng!',
                                                        icon: data.success ? 'success' : 'error',
                                                        confirmButtonText: 'OK'
                                                    }).then(() => { if (data.success) location.reload(); });
                                                })
                                                .catch(error => Swal.fire({ title: 'Có lỗi xảy ra!', icon: 'error', confirmButtonText: 'OK' }));
                                        }
                                    });
                                }
                            </script>

                            <button type="button" onclick="window.location.href='/admin/user/profiles/{{this._id}}'" class="btn btn-sm btn-outline-primary">View</button>
                            <a onclick="confirmDelete('{{this._id}}')" class="btn btn-sm btn-outline-danger">Delete</a>
                            <script>
                                function confirmDelete(idUser) {
                                    Swal.fire({
                                        title: 'Xóa người dùng này?',
                                        icon: 'warning',
                                        showCancelButton: true,
                                        confirmButtonText: 'Đồng ý',
                                        cancelButtonText: 'Hủy',
                                    }).then((result) => {
                                        if (result.isConfirmed) {
                                            fetch(`/admin/user/delete/${idUser}`, { method: 'POST' })
                                                .then(response => response.ok ? response.json() : Promise.reject('Lỗi khi xóa người dùng'))
                                                .then(data => {
                                                    Swal.fire({
                                                        title: data.success ? 'Người dùng đã được xóa!' : 'Không thể xóa người dùng!',
                                                        icon: data.success ? 'success' : 'error',
                                                        confirmButtonText: 'OK'
                                                    }).then(() => { if (data.success) location.reload(); });
                                                })
                                                .catch(error => Swal.fire({ title: 'Có lỗi xảy ra!', icon: 'error', confirmButtonText: 'OK' }));
                                        }
                                    });
                                }
                            </script>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
